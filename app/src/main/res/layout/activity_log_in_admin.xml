<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInAdmin">

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="Deprecated,MissingConstraints">



        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In screen for Admin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_x="100dp"
            android:layout_y="100dp"

            tools:ignore="Invalid"

            />
        <Button
            android:id="@+id/btn0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/Submit"
            android:layout_x="100dp"
            android:layout_y="350dp"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/editTextTextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="164dp"
            android:layout_y="162dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="94dp"
            android:layout_y="176dp"
            android:text="Enter ID:" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="47dp"
            android:layout_y="247dp"
            android:text="Enter Password:" />

        <EditText
            android:id="@+id/editTextPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="166dp"
            android:layout_y="232dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />


    </AbsoluteLayout>

</androidx.constraintlayout.widget.ConstraintLayout>